discs = int(input('Введите количество колец: '))
A = input('Введите номер стержня, с которого взять кольцо: ')
B = input('Введите номер стержня, используемого в качестве временного: ')
C = input('Введите номер стержня, на который переложить кольцо: ')
def towers(discs, A, C, B):
    if discs > 0:
        towers(discs - 1, A, B, C)
        print('Переложить кольцо со стержня', A, 'на', C, 'стержень.')
        return towers(discs - 1, B, C, A)
def main():
    towers(discs, A, C, B)
    print('Все кольца перемещены, задача решена!')
main()
